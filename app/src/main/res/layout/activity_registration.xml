<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login"
    android:layoutDirection="rtl"
    android:background="@color/backgroundColor">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_margin="@dimen/margin_large_size"
            android:layout_marginLeft="@dimen/margin_small_size"
            android:layout_marginRight="@dimen/margin_small_size"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="تسجيل حساب"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_large_size"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="@dimen/margin_large_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="المعلومات الشخصية"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/txt_normal_size"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="رقم الهاتف"
                            android:background="@android:color/transparent"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txt_normal_size"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="اسم السائق رباعي"
                            android:background="@android:color/transparent"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txt_normal_size"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="الايميل (اختياري)"
                            android:background="@android:color/transparent"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txt_normal_size"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_alignParentLeft="true"
                            android:scaleType="center"
                            android:layout_marginRight="@dimen/margin_normal_size"
                            android:layout_marginLeft="@dimen/margin_normal_size"
                            android:id="@+id/img"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_calendar"/>
                        <TextView
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="تاريخ الميلاد"
                            android:background="@android:color/transparent"
                            android:textColor="@color/colorPrimary"
                            android:layout_toRightOf="@+id/img"
                            android:textSize="@dimen/txt_normal_size"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="معلومات السكن"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/txt_normal_size"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_alignParentLeft="true"
                            android:scaleType="center"
                            android:layout_marginRight="@dimen/margin_normal_size"
                            android:layout_marginLeft="@dimen/margin_normal_size"
                            android:id="@+id/img2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_down"/>
                        <Spinner
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:textColor="@color/colorPrimary"
                            android:layout_toRightOf="@+id/img2"
                            android:textSize="@dimen/txt_normal_size"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <androidx.constraintlayout.widget.Guideline
                        android:layout_marginBottom="@dimen/margin_normal_size"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"
                        android:id="@+id/g1"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_marginLeft="@dimen/margin_small_size"/>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/margin_small_size"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/g1"
                        android:layout_marginTop="@dimen/margin_normal_size"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="@dimen/margin_normal_size">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_alignParentLeft="true"
                                android:scaleType="center"
                                android:layout_marginRight="@dimen/margin_normal_size"
                                android:layout_marginLeft="@dimen/margin_normal_size"
                                android:id="@+id/img3"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_arrow_down"/>
                            <Spinner
                                android:paddingLeft="@dimen/margin_normal_size"
                                android:paddingRight="@dimen/margin_normal_size"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:textColor="@color/colorPrimary"
                                android:layout_toRightOf="@+id/img3"
                                android:textSize="@dimen/txt_normal_size"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/margin_small_size"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/g1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="@dimen/margin_normal_size"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="@dimen/margin_normal_size">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_alignParentLeft="true"
                                android:scaleType="center"
                                android:layout_marginRight="@dimen/margin_normal_size"
                                android:layout_marginLeft="@dimen/margin_normal_size"
                                android:id="@+id/img4"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_arrow_down"/>
                            <Spinner
                                android:paddingLeft="@dimen/margin_normal_size"
                                android:paddingRight="@dimen/margin_normal_size"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:textColor="@color/colorPrimary"
                                android:layout_toRightOf="@+id/img4"
                                android:textSize="@dimen/txt_normal_size"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="معلومات العربة"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/txt_normal_size"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="نوع العربة"
                            android:background="@android:color/transparent"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txt_normal_size"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="رقم العربة"
                            android:background="@android:color/transparent"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txt_normal_size"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    app:cardBackgroundColor="@color/grayColor"
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_alignParentLeft="true"
                            android:scaleType="center"
                            android:layout_marginRight="@dimen/margin_normal_size"
                            android:layout_marginLeft="@dimen/margin_normal_size"
                            android:id="@+id/img5"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_image"/>
                        <TextView
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="إرفق 3-5 صور للعربة"
                            android:background="@android:color/transparent"
                            android:textColor="@android:color/white"
                            android:layout_toRightOf="@+id/img5"
                            android:textSize="@dimen/txt_normal_size"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_large_size"
                    android:layout_marginRight="@dimen/margin_large_size"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardImg1"
                            android:layout_margin="@dimen/margin_small_size"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="@dimen/margin_small_size"
                            app:cardBackgroundColor="#D0D0D0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_add_photo"
                                    android:scaleType="center"
                                    />
                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/image1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/car1"
                                    android:scaleType="centerCrop"
                                    />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardImg2"
                            android:layout_margin="@dimen/margin_small_size"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="@dimen/margin_small_size"
                            app:cardBackgroundColor="#D0D0D0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_add_photo"
                                    android:scaleType="center"
                                    />
                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/image2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/car1"
                                    android:scaleType="centerCrop"
                                    />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardImg3"
                            android:layout_margin="@dimen/margin_small_size"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="@dimen/margin_small_size"
                            app:cardBackgroundColor="#D0D0D0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_add_photo"
                                    android:scaleType="center"
                                    />
                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/image3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/car1"
                                    android:scaleType="centerCrop"
                                    />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardImg4"
                            android:layout_margin="@dimen/margin_small_size"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="@dimen/margin_small_size"
                            app:cardBackgroundColor="#D0D0D0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="center"
                                    android:src="@drawable/ic_add_photo" />
                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/image4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/car1"
                                    android:scaleType="centerCrop"
                                    />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardImg5"
                            android:layout_margin="@dimen/margin_small_size"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="@dimen/margin_small_size"
                            app:cardBackgroundColor="#D0D0D0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_add_photo"
                                    android:scaleType="center"
                                    />
                                <ImageView
                                    android:visibility="gone"
                                    android:id="@+id/image5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/car1"
                                    android:scaleType="centerCrop"
                                    />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    app:cardBackgroundColor="@color/grayColor"
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_alignParentLeft="true"
                            android:scaleType="center"
                            android:layout_marginRight="@dimen/margin_normal_size"
                            android:layout_marginLeft="@dimen/margin_normal_size"
                            android:id="@+id/img6"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_image"/>
                        <TextView
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="إرفق صور تسجيل العربة"
                            android:background="@android:color/transparent"
                            android:textColor="@android:color/white"
                            android:layout_toRightOf="@+id/img6"
                            android:textSize="@dimen/txt_normal_size"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/margin_small_size"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="@dimen/margin_small_size"
                        app:cardBackgroundColor="#D0D0D0">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="center"
                                android:src="@drawable/ic_add_photo" />
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/image6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/car1"
                                android:scaleType="centerCrop"
                                />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="معلومات اثبات الشخصية"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/txt_normal_size"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/margin_normal_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="نوع اثبات الشخصية"
                            android:background="@android:color/transparent"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txt_normal_size"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    app:cardBackgroundColor="@color/grayColor"
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="@dimen/margin_normal_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_alignParentLeft="true"
                            android:scaleType="center"
                            android:layout_marginRight="@dimen/margin_normal_size"
                            android:layout_marginLeft="@dimen/margin_normal_size"
                            android:id="@+id/img77"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_image"/>
                        <TextView
                            android:paddingLeft="@dimen/margin_normal_size"
                            android:paddingRight="@dimen/margin_normal_size"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
